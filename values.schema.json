{
  "title": "Banking Product Configuration",
  "type": "object",
  "order": ["product", "limits", "compliance", "integration"],
  "properties": {
    "product": {
      "type": "object",
      "title": "Product Definition",
      "order": ["productType", "currency", "interestRate", "fees"],
      "properties": {
        "productType": {
          "title": "Product Type",
          "type": "string",
          "enum": [
            "CurrentAccount",
            "SavingsAccount",
            "TermDeposit",
            "CreditCard",
            "Loan"
          ],
          "description": "Choose the type of banking product."
        },
        "currency": {
          "title": "Currency",
          "type": "string",
          "enum": ["EUR", "USD", "GBP", "CHF"],
          "description": "Currency in which this product operates."
        },
        "interestRate": {
          "title": "Interest Rate (%)",
          "type": "number",
          "description": "Interest rate applied to the product."
        },
        "fees": {
          "title": "Fees",
          "type": "object",
          "order": ["monthlyFee", "transactionFee"],
          "properties": {
            "monthlyFee": {
              "title": "Monthly Maintenance Fee",
              "type": "number"
            },
            "transactionFee": {
              "title": "Transaction Fee",
              "type": "number",
              "description": "Fee applied per transaction."
            }
          }
        }
      },
      "required": ["productType", "currency"]
    },

    "limits": {
      "type": "object",
      "title": "Limits & Thresholds",
      "order": ["dailyLimit", "monthlyLimit", "overdraftAllowed"],
      "properties": {
        "dailyLimit": {
          "title": "Daily Transaction Limit",
          "type": "number",
          "description": "Maximum amount allowed per day."
        },
        "monthlyLimit": {
          "title": "Monthly Transaction Limit",
          "type": "number",
          "description": "Maximum amount allowed per month."
        },
        "overdraftAllowed": {
          "title": "Overdraft Allowed",
          "type": "boolean",
          "description": "Specify if overdraft is permitted (for account products)."
        }
      }
    },

    "compliance": {
      "type": "object",
      "title": "Compliance & KYC",
      "order": ["kycRequired", "riskCategory", "pepCheck"],
      "properties": {
        "kycRequired": {
          "title": "KYC Required",
          "type": "boolean",
          "description": "Whether full KYC must be completed before activation."
        },
        "riskCategory": {
          "title": "Risk Category",
          "type": "string",
          "enum": ["Low", "Medium", "High"],
          "description": "Risk classification used for AML scoring."
        },
        "pepCheck": {
          "title": "PEP Screening",
          "type": "boolean",
          "description": "Whether Politically Exposed Person screening is mandatory."
        }
      }
    },

    "integration": {
      "type": "object",
      "title": "Backend Integration",
      "order": ["coreBankingSystem", "notifications", "webhooks"],
      "properties": {
        "coreBankingSystem": {
          "title": "Core Banking System",
          "type": "string",
          "enum": ["Temenos", "Mambu", "FIS", "Custom"],
          "description": "Which backend system to integrate with."
        },
        "notifications": {
          "title": "Notifications",
          "type": "object",
          "order": ["smsEnabled", "emailEnabled"],
          "properties": {
            "smsEnabled": {
              "title": "SMS Notifications",
              "type": "boolean"
            },
            "emailEnabled": {
              "title": "Email Notifications",
              "type": "boolean"
            }
          }
        },
        "webhooks": {
          "title": "Webhooks",
          "type": "array",
          "description": "List of webhook endpoints to notify for product events.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
